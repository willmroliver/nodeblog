<%- include("header"); %>

    <section id="read-more-viewer">

        <nav class="navbar navbar-expand-lg navbar-dark read-more-nav">
            <a class="navbar-brand about-navbar" href="#">NodeBlog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <form action="/" method="post">
                            <button class="nav-link about-navbar" type="submit" value="about">Home</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/about" method="post">
                            <button class="nav-link about-navbar" type="submit" value="about">About</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/allposts" method="post">
                            <button class="nav-link about-navbar" type="submit" value="about">Posts</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="read-more-title">
            <%= postTitle %> 
        </div>

    </section>

    <section id="read-more-post">

        <div class="read-more-body">
            <%= postBody %> 
        </div>

    </section>

