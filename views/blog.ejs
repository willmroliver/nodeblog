<%- include("header"); %> 

    <section id="title">

        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand home-navbar" href="#">NodeBlog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <form action="/" method="post">
                            <button class="nav-link home-navbar" type="submit" value="about">Home</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/about" method="post">
                            <button class="nav-link home-navbar" type="submit" value="about">About</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/allposts" method="post">
                            <button class="nav-link home-navbar" type="submit" value="about">Posts</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="title-text-img">
            <img class="title-img" src="img/title-img.jpg" alt="title-img">
            <h1 class="title-text">
                NodeBlog
            </h1>
            <h2 class="subtitle-text">
                A Node.js Blog,<br> coded and written by yours truly x
            </h2>
        </div>

    </section>

    <section id="posts">

        <form action="/" method="post" autocomplete="off">
            <input class="post-input title-input" type="text" name="postTitle" placeholder="Give it a Title...">
            <textarea class="post-input body-input" type="text" name="postBody" placeholder="Write your post here."></textarea>
            
            <div class="right-align">
                <input class="upload-post" type="submit" value="Post it">
            </div>
        </form>

        <div>
            <% for (var i = 0; i < blogPosts.length; i++) { %> 
                <h3 class="post-title"><%= blogPosts[blogPosts.length - 1 - i][0] %> </h3>
                <form action="/posts" method="post">
                    <p class="post-body">
                        <%=  blogPosts[blogPosts.length - 1 - i][1].substr(0, 300) %><button class="read-more"  type="submit" name="postIndex" value="<%= blogPosts.length - 1 - i %>"> ... read more</button>
                    </p>
                </form> 
            <% } %> 
        </div>

    </section>

<%- include("footer") %> 